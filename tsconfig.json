{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "20.1.0",
  "compilerOptions": {
    "lib": ["es2023"], 
    "module": "ESNext", 
    "target": "ES2022", 
    "strict": true, 
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "moduleResolution": "node", 
    "outDir": "./dist",
    "rootDir": "./cli/src", 
    "types": ["jest"], 
  },
  "include": ["cli/src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist"], 
  "extends": "@tsconfig/node20/tsconfig.json" 
}